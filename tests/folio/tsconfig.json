{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": false,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "./out",
    "rootDir": "./src",
    "lib": ["esnext", "dom", "DOM.Iterable"],
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}