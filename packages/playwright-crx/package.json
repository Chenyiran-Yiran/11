{
  "name": "@playwright/experimental-crx",
  "version": "1.37.0-next",
  "description": "A high-level API to automate Chromium",
  "repository": "github:Microsoft/playwright",
  "homepage": "https://playwright.dev",
  "engines": {
    "node": ">=16"
  },
  "author": {
    "name": "Microsoft Corporation"
  },
  "license": "Apache-2.0",
  "scripts": {
    "generate-node-shims": "node ../../utils/crx/generate_node_shims.js",
    "check-deps": "node ../../utils/crx/check_deps.js",
    "build": "npm run generate-node-shims && vite build && npm run check-deps",
    "watch": "npm run generate-node-shims && vite build --watch --sourcemap --minify=false"
  },
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./lib/playwright-crx.mjs",
      "require": "./lib/playwright-crx.umd.js",
      "default": "./lib/playwright-crx.umd.js"
    },
    "./package.json": "./package.json"
  }
}
